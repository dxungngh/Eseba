<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray">

    <LinearLayout
        android:id="@+id/fragment_setting_notification_line_all"
        style="@style/Eseba.Setting.Row"
        android:layout_alignParentTop="true"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/fragment_setting_notification_back"
            style="@style/Eseba.Setting.BackButton"/>

        <TextView
            style="@style/Eseba.Setting.RowText"
            android:text="設定"/>
    </LinearLayout>

    <LinearLayout
        style="@style/Eseba.Setting.RowAndTitle"
        android:layout_below="@id/fragment_setting_notification_line_all">

        <TextView
            style="@style/Eseba.Setting.RowTitle"
            android:text="通知設定"/>

        <RelativeLayout
            style="@style/Eseba.Setting.Row">

            <TextView
                style="@style/Eseba.Setting.RowText"
                android:layout_alignParentLeft="true"
                android:text="新着情報の通知設定"/>

            <ImageView
                style="@style/Eseba.Setting.ToggleButton"
                android:layout_alignParentRight="true"/>
        </RelativeLayout>
    </LinearLayout>
</RelativeLayout>
