<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray">

    <LinearLayout
        android:id="@+id/fragment_setting_item_group_line_all"
        style="@style/Eseba.Setting.Row"
        android:layout_alignParentTop="true"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/fragment_setting_item_group_back"
            style="@style/Eseba.Setting.BackButton"/>

        <TextView
            style="@style/Eseba.Setting.RowText"
            android:text="設定"/>
    </LinearLayout>

    <LinearLayout
        style="@style/Eseba.Setting.RowAndTitle"
        android:layout_below="@id/fragment_setting_item_group_line_all">

        <TextView
            style="@style/Eseba.Setting.RowTitle"
            android:text="エリア設定"/>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/fragment_setting_item_group_list"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    </LinearLayout>
</RelativeLayout>
